@model List<Lesson>

<h2>Generated timetable for class @ViewBag.ClassName</h2>

@if (Model == null || !Model.Any())
{
    <p>No timetable generated.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Poniedziałek</th>
                <th>Wtorek</th>
                <th>Środa</th>
                <th>Czwartek</th>
                <th>Piątek</th>
            </tr>
        </thead>
        <tbody>
            @for (int hour = 1; hour <= 8; hour++)
            {
                <tr>
                    <th>@hour</th>
                    @for (int dayOfWeek = 1; dayOfWeek <= 5; dayOfWeek++)
                    {
                        var lesson = Model.FirstOrDefault(l => l.DayOfWeek == dayOfWeek && l.Hour == hour);
                        <td>
                            @if (lesson != null)
                            {
                                <strong>@lesson.SubjectName</strong>
                                @lesson.TeacherName
                            }
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
    <form asp-action="SaveTimetable" asp-controller="ScheduleManager" method="post">
        @foreach (var lesson in Model)
        {
            <input type="hidden" name="timetable[@Model.IndexOf(lesson)].LessonId" value="@lesson.LessonId" />
            <input type="hidden" name="timetable[@Model.IndexOf(lesson)].DayOfWeek" value="@lesson.DayOfWeek" />
            <input type="hidden" name="timetable[@Model.IndexOf(lesson)].Hour" value="@lesson.Hour" />
            <input type="hidden" name="timetable[@Model.IndexOf(lesson)].Class" value="@lesson.Class" />
            <input type="hidden" name="timetable[@Model.IndexOf(lesson)].ClassId" value="@lesson.ClassId" />
            <input type="hidden" name="timetable[@Model.IndexOf(lesson)].TeacherName" value="@lesson.TeacherName" />
            <input type="hidden" name="timetable[@Model.IndexOf(lesson)].SubjectName" value="@lesson.SubjectName" />
        }
        <button type="submit" class="btn btn-primary">Save Timetable</button>
    </form>
}
