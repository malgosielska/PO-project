@model List<Lesson>

<h2>Generated timetable for class @ViewBag.ClassName</h2>

@if (Model == null || !Model.Any())
{
    <p>No timetable generated.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Poniedziałek</th>
                <th>Wtorek</th>
                <th>Środa</th>
                <th>Czwartek</th>
                <th>Piątek</th>
            </tr>
        </thead>
        <tbody>
            @for (int hour = 1; hour <= 8; hour++)
            {
                <tr>
                    <th>@hour</th>
                    @for (int dayOfWeek = 1; dayOfWeek <= 5; dayOfWeek++)
                    {
                        var lesson = Model.FirstOrDefault(l => l.DayOfWeek == dayOfWeek && l.Hour == hour);
                        <td>
                            @if (lesson != null)
                            {
                                <strong>@lesson.Subject.SubjectName</strong><br />
                                @lesson.Teacher.TeacherName
                            }
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
